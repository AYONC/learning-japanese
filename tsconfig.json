{
  "compilerOptions": {
    "baseUrl": "src",
    "inlineSources": false,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "outDir": "build",
    "pretty": true,
    "paths": {
      "main/*": ["./main/*"],
      "renderer/*": ["./renderer/*"]
    },
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",

    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}
